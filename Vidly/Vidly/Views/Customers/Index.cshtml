
@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customer";
}
@{
    //Dette kan brukes for å sette forskjellige css klasser feks

    var className = Model.Count() > 5 ? "popular" : null;
}

@if (Model.Count() ==0)
{
    <p>Det er ingen registrerte brukere i databasen</p>
}
else
{
    

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {<tr> 
            
                 <th> @Html.ActionLink(customer.Name, "Details","Customers",new {id= customer.Id},null)</th>
                
                 <th> @customer.MembershipType.DiscountRate %</th>
                 </tr>
            }
        </tbody>

    </table>
}
